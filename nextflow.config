params {
    user_id = 'test'
    redsheet = "s3://ecd-rosalind/pipelines/ecd/test_files/test_redsheet.csv"
    manifestdir = 's3://ecd-rosalind/pipelines/ecd/test_files/manifests/'
    fastq_rootdir = 's3://ecd-rosalind/pipelines/ecd/test_files/'
