    bwamem_threads = 2
    sambamba_merge_threads = 2
    sambamba_markdup_threads = 2
    mosdepth_threads = 1

    disk_merge_fastqs = 4
    disk_fastp = 4
    disk_bwamem = 4
    disk_sambamba_merge = 4
    disk_sambamba_markdup = 4
    disk_picard_CISM = 4
