{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/./master/nextflow_schema.json",
  "title": ". pipeline parameters",
  "description": "",
  "type": "object",
  "definitions": {
    "input_output_options": {
      "title": "Input/output options",
      "type": "object",
      "fa_icon": "fas fa-terminal",
      "description": "Define where the pipeline should find input data and save output data.",
      "required": [
        "outdir",
        "manifestdir",
        "fastq_rootdir",
        "reference",
        "redsheet"
      ],
      "properties": {
        "user_id": {
          "type": "string",
          "default": "test"
        },
        "tracedir": {
          "type": "string",
          "description": "Directory to keep pipeline Nextflow logs and reports.",
          "default": "${params.outdir}/pipeline_info",
          "fa_icon": "fas fa-cogs",
          "hidden": true
        },
        "outdir": {
          "type": "string",
          "format": "directory-path",
          "description": "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure.",
          "fa_icon": "fas fa-folder-open"
        },
        "manifestdir": {
          "type": "string",
          "default": "s3://ecd-rosalind/pipelines/ecd/test_files/manifests/"
        },
        "fastq_rootdir": {
          "type": "string",
          "default": "s3://ecd-rosalind/pipelines/ecd/test_files/"
        },
        "reference": {
          "type": "string",
          "default": "s3://ecd-rosalind/pipelines/ecd/test_files/chr22_bwa_index/chr22.fa"
        },
        "publish_dir": {
          "type": "string",
          "default": "s3://ecd-rosalind/demo/tower-output/results",
          "hidden": true
        },
        "redsheet": {
          "type": "string",
          "default": "s3://ecd-rosalind/pipelines/ecd/test_files/test_redsheet.csv"
        }
      }
    },
    "generic_options": {
      "title": "Generic options",
      "type": "object",
      "fa_icon": "fas fa-file-import",
      "description": "Less common options for the pipeline, typically set in a config file.",
      "help_text": "These options are common to all nf-core pipelines and allow you to customise some of the core preferences for how the pipeline runs.\n\nTypically these options would be set in a Nextflow config file loaded for all pipeline runs, such as `~/.nextflow/config`.",
      "properties": {
        "container_python": {
          "type": "string",
          "default": "python"
        },
        "container_fastp": {
          "type": "string",
          "default": "nanozoo/fastp"
        },
        "container_bwa_samtools": {
          "type": "string",
          "default": "mblanche/bwa-samtools"
        },
        "container_picard": {
          "type": "string",
          "default": "kothap2/picard:latest"
        },
        "container_mosdepth": {
          "type": "string",
          "default": "nanozoo/mosdepth:0.3.2--892ca95"
        },
        "container_multiqc": {
          "type": "string",
          "default": "mattwherlock/multiqc:1.12"
        },
        "container_collateqc": {
          "type": "string",
          "default": "kothap2/collateqc:latest"
        },
        "container_sambamba": {
          "type": "string",
          "default": "mgibio/sambamba-cwl:0.6.4"
        },
        "MULTI_METRICS_PROGRAMS": {
          "type": "string",
          "default": "CollectAlignmentSummaryMetrics,QualityScoreDistribution,CollectGcBiasMetrics"
        }
      }
    },
    "resources": {
      "title": "Resources",
      "type": "object",
      "description": "",
      "default": "",
      "fa_icon": "fas fa-cogs",
      "properties": {
        "bwamem_threads": {
          "type": "integer",
          "default": 2
        },
        "sambamba_merge_threads": {
          "type": "integer",
          "default": 2
        },
        "sambamba_markdup_threads": {
          "type": "integer",
          "default": 2
        },
        "mosdepth_threads": {
          "type": "integer",
          "default": 1
        },
        "disk_merge_fastqs": {
          "type": "integer",
          "default": 4
        },
        "fastp_threads": {
          "type": "integer",
          "default": 2
        },
        "disk_bwamem": {
          "type": "integer",
          "default": 4
        },
        "disk_sambamba_merge": {
          "type": "integer",
          "default": 4
        },
        "disk_sambamba_markdup": {
          "type": "integer",
          "default": 4
        },
        "disk_picard_CISM": {
          "type": "integer",
          "default": 4
        },
        "disk_picard_CMM": {
          "type": "integer",
          "default": 4
        },
        "disk_mosdepth": {
          "type": "integer",
          "default": 4
        },
        "disk_multiqc": {
          "type": "integer",
          "default": 4
        },
        "disk_fastp": {
          "type": "integer",
          "default": 4
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/input_output_options"
    },
    {
      "$ref": "#/definitions/generic_options"
    },
    {
      "$ref": "#/definitions/resources"
    }
  ]
}
